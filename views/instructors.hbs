<h1>Instructors</h1>
<div class="pageDescription">
    <p>Instructors page.</p>
</div>


{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each instructors.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each instructors}}
        <tr>
            <td>{{this.instructorID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>

        </tr>
        {{/each}}
    </tbody>

    
</table>
