<h1>Class Registration</h1>
<div class="pageDescription">
    <p>Class Registration page (PatronHasClasses table).</p>
</div>

{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each classinfo.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>
        <tbody>
        {{#each classinfo}}
        <tr>
            <td>{{this.registrationID}}</td>
            <td>{{this.patronID}}</td>
            <td>{{this.patronName}}</td>
            <td>{{this.classID}}</td>
            <td>{{this.className}}</td>

            {{! DELETE form }}
            <form id='delete_registration_form' method="POST" action="/class-registration/delete">
                <input type='hidden' name='delete_registration_id' value='{{this.registrationID}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! UPDATE form }}
<h2>Update Registration Info</h2>
<form class='cuForm' id='update_registration_id' method="POST" action="/class-registration/update">
    <label for='update_registration_id'>Registration ID Update: </label>
    <select name='update_registration_id' id='update_registration_id' required>
        <option value='' disabled selected>Select a Registration ID</option>
        {{#each classinfo}}
        <option value='{{this.registrationID}}' required>
            {{this.registrationID}}
        </option>
        {{/each}}
    </select>

    <label for='update_patron_id'>Patron Info to Update: </label>
    <select name='update_patron_id' id='update_patron_id' required>
        <option value='' disabled selected>Select a Patron</option>
        {{#each patrons}}
        <option value='{{this.patronID}}' required>
            {{this.patronID}}
            -
            {{this.name}}
        </option>
        {{/each}}
    </select>

    <label for='update_class_id'>Class Info to Update: </label>
    <select name='update_class_id' id='update_class_id' required>
        <option value='' disabled selected>Select a Class</option>
        {{#each classes}}
        <option value='{{this.classID}}' required>
            {{this.classID}}
            -
            {{this.name}}
        </option>
        {{/each}}
    </select>
   
    <input type='submit' />
</form>


