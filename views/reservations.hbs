<h1>Reservations</h1>
<div class="pageDescription">
    <p>Reservations page.</p>
</div>

{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each reservations.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each reservations}}
        <tr>
            <td>{{this.reservationID}}</td>
            <td>{{this.patronName}}</td>
            <td>{{this.date}}</td>
            <td>{{this.duration}}</td>
            <td>${{this.price}}</td>
            <td>{{this.comments}}</td>
        </tr>
        {{/each}}
    </tbody>

    
</table>
