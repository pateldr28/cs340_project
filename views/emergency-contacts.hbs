<h1>Emergency Contacts</h1>
<div class="pageDescription">
    <p>Emergency Contacts page.</p>
</div>
{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each contacts.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each contacts}}
        <tr>
            <td>{{this.emergencyContactID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
        </tr>
        {{/each}}
    </tbody>

    
</table>


